include ../logo/logo.pug
include ../button-el/button-el.pug
include ../mobile-menu/mobile-menu.pug


include ../main-menu/main-menu.pug
.header__container
    .header__logo
        +logo()
    .header__contacts
        div 
            each i in common.address 
                p= i 
        div 
            a(href="tel:"+common.phone)= common.phone
    .header__burger 
        input.header__burger-switch(type="checkbox" name="")
        img.header__burger-img.header__burger-img--open(src="../../../assets/icons/burger-white.svg" alt="burger")
        img.header__burger-img.header__burger-img--close(src="../../../assets/icons/x-white.svg" alt="burger")

        .header__menu-mobile 
            +mobileMenu(mainMenu)


    .header__right 
        .header__search 
            input#search-input(type="text" name="seacrh" placeholder="Поиск товара")
            img(src="../../../assets/icons/search.svg" alt="search")
        +buttonEl("white")(class="header__call header__call--visible")
            | Заказать звонок
        +buttonEl("white")(class="header__call header__call--hidden")
            a(href="tel:"+common.phone)
                img(src="../../../assets/icons/call.svg")
