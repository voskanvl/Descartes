{
    "name": "vite-standart-app",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite  --host",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "create component": " bash ./create-component.bash",
        "create block": " bash ./create-block.bash",
        "tar": "tar -czvf dist.tar.gz ./dist",
        "copy_assets_to_dist": "cp -r ./assets/* ./dist/assets",
        "global_build": "npm run build && npm run copy_assets_to_dist && npm run tar"
    },
    "devDependencies": {
        "@types/node": "^18.11.18",
        "fast-glob": "^3.2.11",
        "json-to-css": "^0.1.0",
        "postcss-media-minmax": "^5.0.0",
        "postcss-preset-env": "^7.8.3",
        "postcss-transform-shortcut": "github:jonathantneal/postcss-transform-shortcut",
        "sass": "^1.54.5",
        "typescript": "latest",
        "vite": "latest",
        "vite-plugin-pug-transformer": "latest",
        "vite-plugin-sass-glob-import": "^2.0.0"
    },
    "dependencies": {
        "@cjting/vite-plugin-svg-sprite": "^0.2.1",
        "@splidejs/splide": "^4.0.7",
        "css-has-pseudo": "^4.0.2",
        "imask": "^6.5.0",
        "js-yaml": "^4.1.0",
        "ky": "^0.33.2",
        "zustand": "^4.1.5"
    }
}
